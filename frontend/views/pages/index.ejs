<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head'); %>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fa-solid fa-store me-2"></i>
                <strong>Cat치logo Digital</strong>
            </a>
            
            <div class="navbar-nav ms-auto">
                <% if (userName) { %>
                    <div class="d-flex align-items-center">
                        <div class="user-info me-3">
                            <i class="fa-solid fa-user"></i>
                            <span><%= userName %></span>
                        </div>
                        <a href="/logout" class="btn btn-logout">
                            <i class="fa-solid fa-right-from-bracket me-1"></i>
                            Cerrar sesi칩n
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="catalog-container" style="padding-top: 100px;">
        <div class="container">
            <!-- Header del cat치logo -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="mb-2">
                                <i class="fa-solid fa-boxes-stacked me-2"></i>
                                Nuestros Productos
                            </h1>
                            <p class="text-muted mb-0">
                                Descubre nuestra amplia gama de productos de calidad
                            </p>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-primary fs-6">
                                <i class="fa-solid fa-tags me-1"></i>
                                <%= products.length %> productos
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Grid de productos -->
            <div class="row g-4">
                <% if (products.length === 0) { %>
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fa-solid fa-box-open fa-3x text-muted mb-3"></i>
                            <h3 class="text-muted">No hay productos disponibles</h3>
                            <p class="text-muted">Pronto agregaremos nuevos productos al cat치logo.</p>
                        </div>
                    </div>
                <% } else { %>
                    <% products.forEach(function(product) { %>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="card product-card h-100">
                                <img src="<%= product.imagen %>" 
                                     class="product-image" 
                                     alt="<%= product.nombre %>"
                                     onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen'">
                                
                                <div class="product-info">
                                    <h5 class="product-title">
                                        <i class="fa-solid fa-box me-2"></i>
                                        <%= product.nombre %>
                                    </h5>
                                    
                                    <p class="product-description">
                                        <i class="fa-solid fa-circle-info me-1"></i>
                                        <%= product.descripcion %>
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="product-price">
                                            <i class="fa-solid fa-dollar-sign me-1"></i>
                                            <%= product.precio.toLocaleString() %>
                                        </div>
                                        <div class="product-stock">
                                            <i class="fa-solid fa-warehouse me-1"></i>
                                            Stock: <%= product.stock %>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            <i class="fa-solid fa-barcode me-1"></i>
                                            Ref: <%= product.referencia %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>